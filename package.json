{
  "name": "root",
  "private": true,
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.5.0",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.7.5"
  },
  "scripts": {
    "build": "turbo build",
    "build:react-components": "turbo build --filter @uoguelph/react-components",
    "build:storybook": "turbo build --filter @uoguelph/storybook",
    "build:web-components": "turbo build --filter @uoguelph/web-components",
    "clean": "turbo clean && rm -rf packages/*/dist packages/storybook/storybook-static",
    "dev": "turbo dev --filter @uoguelph/storybook",
    "docker:clean": "docker-compose down",
    "docker:dev": "docker-compose up",
    "format": "npx prettier --write .",
    "watch:react-components": "turbo watch --filter @uoguelph/react-components",
    "changeset": "changeset",
    "changeset:enter-prerelease": "changeset pre enter rc",
    "changeset:exit-prerelease": "changeset pre exit",
    "changeset:version": "changeset version",
    "changeset:release": "turbo build && changeset publish"
  }
}
